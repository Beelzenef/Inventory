<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_category_account">

        <SwitchPreference
            android:defaultValue="true"
            android:summary="@string/pref_summary_rememberme"
            android:summaryOff="No recordar usuario"
            android:summaryOn="Recordando usuario"
            android:title="@string/pref_title_rememberme"/>
        <EditTextPreference
            android:defaultValue="Usuario"
            android:key="username"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="@string/pref_summary_username"
            android:title="@string/pref_title_username"/>
        <EditTextPreference
            android:inputType="textPassword"
            android:key="password"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="@string/pref_summary_password"
            android:title="@string/pref_title_password"/>
    </PreferenceCategory>


</PreferenceScreen>